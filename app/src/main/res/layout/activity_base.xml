<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:id="@+id/lin1">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:id="@+id/image"
                android:layout_height="40dp"
                android:src="@mipmap/app_icon"
                app:civ_border_color="@color/white"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Sanjib kumar"
                android:layout_toRightOf="@+id/image"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:textSize="20dp">

            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Pending"
                    android:textColor="@color/white"
                    android:textSize="19dp"></TextView>

                <TextView
                    android:id="@+id/view_pending"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/text_pending"
                    android:layout_marginTop="5dp"
                    android:background="@color/white" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="In Progress"
                    android:textColor="#d3d3d3"
                    android:textSize="19dp"></TextView>

                <TextView
                    android:id="@+id/view_progress"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/text_progress"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Completed"
                    android:textColor="#d3d3d3"
                    android:textSize="19dp"></TextView>

                <TextView
                    android:id="@+id/view_completed"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/text_completed"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin1"
        android:background="#d3d3d3"
        android:layout_above="@+id/navigation">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/recycle">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:src="@mipmap/plus"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:id="@+id/view"
            android:background="@color/colorPrimary"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_below="@+id/view"
            app:cardElevation="5dp">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:id="@+id/home_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/linearLayout"
                    android:layout_weight="1"
                    android:background="@null">

                    <ImageView
                        android:id="@+id/home_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />


                    <TextView
                        android:id="@+id/home_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Home"
                        android:textAllCaps="true"
                        android:layout_below="@+id/home_img"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/profile_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null">

                    <ImageView
                        android:id="@+id/profile_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/profile_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:text="Profile"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_gray"
                        android:textSize="11dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/notification_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null">

                    <ImageView
                        android:id="@+id/notification_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/notification_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/notification_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:text="Notification"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_gray"
                        android:textSize="11dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/order_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null">

                    <ImageView
                        android:id="@+id/order_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/order_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:text="Settings"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_gray"
                        android:textSize="11dp" />


                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>